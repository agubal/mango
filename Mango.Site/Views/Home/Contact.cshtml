@section scripts
{
    <script>
        document.addEventListener("DOMContentLoaded", function(event) {
            initMap();
        });

        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 5,
                center: { lat: 52.2296756, lng: 21.0122287 }
            });
            setMarkers(map);
        }

        var tecwiLocations = [
            ['Kiev', 50.4546600, 30.5238000, 3],
            ['Lvov', 49.8382600, 24.0232400, 2],
            ['London', 51.5085300, -0.1257400, 1]
        ];

        function setMarkers(map) {

            var image = {
                url: 'http://localhost:5118/Content/images/mark.png',
                size: new google.maps.Size(150, 70),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(40, 50)
            };

            var shape = {
                coords: [1, 1, 1, 20, 18, 20, 18, 1],
                type: 'poly'
            };

            for (var i = 0; i < tecwiLocations.length; i++) {
                var tecwiLocation = tecwiLocations[i];
                var marker = new google.maps.Marker({
                    position: { lat: tecwiLocation[1], lng: tecwiLocation[2] },
                    map: map,
                    icon: image,
                    shape: shape,
                    title: tecwiLocation[0],
                    zIndex: tecwiLocation[3]
                });
            }
        }

    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA4_kOVF1FzoO5iSDr0Vd1VwdI8vbbMm0Q&signed_in=true&callback=initMap"
            async defer></script>}

